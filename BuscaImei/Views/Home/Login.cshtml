@{
    ViewData["Title"] = "";
  
}
<h2>@ViewData["Title"]</h2>

<body class="">
    <section class="bg-login ">
        <div class="">
            <div class="col-md-12">
                <div class="row justify-content-md-center">

                    <div class="col-md-12">
                        <span id="msg-capslok"></span>
                        <form class="container mt-5" action="https://localhost:44306/Auth/Login" method="post">

                            <div class="form-group">

                                <label class="texto-login-custom text-primary text-uppercase">Seu E-mail</label>

                                <div class="col-auto p-0">

                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-envelope text-primary"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="Email" name="Email" placeholder="E-mail">
                                    </div>
                                </div>

                                <label class="texto-login-custom text-primary text-uppercase">Sua Senha</label>

                                <div class="col-auto p-0">

                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-lock text-primary"></i></div>
                                        </div>

                                        <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Senha">
                                        <div class="input-group-append">
                                            <span class="input-group-text input-group-lg"><a href="#"><i class="fa fa-eye-slash olho" id="olho"></i></a></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="container">
                                    <div class="row">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label" for="exampleCheck1">Salvar senha</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="container mr-5">
                                    <button type="submit" class="btn btn-primary form-control mt-2">Acessar</button>
                                </div>

                                <div class="col-md-12 ">
                                    <div class="row ">
                                        <label class="mx-auto mt-2 text-black-50"><b>OU</b></label>
                                    </div>
                                </div>

                                <div class="container">
                                    <div class="row justify-content-center">
                                        <a href="#"><i class="fab fa-facebook text-primary h1 mr-1"></i></a>
                                        <a href="#"><i class="fab fa-google text-primary h1 ml-1"></i></a>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <small class="form-text text-muted">Esqueceu a senha? <a href="#">Clique aqui</a> </small>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
</body>

