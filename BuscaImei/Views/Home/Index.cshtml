<script>

    var pfx2 = ["webkit", "moz", "MS", "o", ""];
    function prefixedEventListener(element, type, callback) {
        for (var p = 0; p < pfx2.length; p++) {
            if (!pfx2[p]) type = type.toLowerCase();
            element.addEventListener(pfx2[p] + type, callback, false);

        }
    }

    var btnShake2 = document.querySelector("#svg-frente");

    prefixedEventListener(btnShake2, "AnimationEnd", function (e) {
        btnShake2.classList.remove("");
        setTimeout(function () {
            btnShake2.classList.add("");
        },
            1000);

    });

</script>
