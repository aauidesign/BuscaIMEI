@model BuscaImei.Models.Dispositivo
@{
    Layout = "_LayoutDashboard";
}

@{
    ViewData["Title"] = "Detalhes";
}

<!-- Começando conteudo !-->
<div class="content-wrapper">

    <div class="container-fluid">

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Home</a>
            </li>
            <li class="breadcrumb-item">
                <span>Busca do aparelho</span>
            </li>
        </ol>

        <div class="row ">
            <div class="col-md-12">
                <h2 class="text-center mt-md-3 mb-md-3">
                    Detalhes do Aparelho
                </h2>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Modelo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Modelo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Imei)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Imei)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Marca)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Marca)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-10">
                            @User.Identity.Name
                        </dd>
                    </dl>

                    @if (Model.Imei == Model.Imei)
                    {
                        <p class="alert alert-success lead text-center">Oba!!! Celular Encontrado.</p>
                    }

                    else
                    {
                        <p class="alert alert-dark lead text-center">Ops... ainda não encontraram seu dispositivo :(</p>
                    }


                    <form class="container mt-md-5 border p-5" method="post" id="insert_form">
                        <div class="row">

                            <div class="col-md-6">
                                <label class="text-primary text-uppercase" for="emailContato">E-mail do Contato:</label>
                                <small class="lead">@Html.DisplayFor(model => model.Usuario.Email)</small>
                                <br />
                                <label class="text-primary text-uppercase">Telefone:</label>
                                <small class="lead"></small>
                                <br />
                                <label class="text-primary text-uppercase">IMEI do aparelho Econtrado:</label>
                                <small class="lead"></small>
                                <br />
                                <label class="texto-login-custom text-primary text-uppercase">Estado:</label>
                                <small class="lead"> </small>
                                <br />
                            </div>

                            <div class="col-md-6">

                                <label class="text-primary text-uppercase" for="emailContato">Endereço:</label>
                                <small class="lead"></small>
                                <br />
                                <label class="text-primary text-uppercase" for="emailContato">Bairro:</label>
                                <small class="lead"></small>
                                <br />
                                <label class="text-primary text-uppercase" for="emailContato">Número:</label>
                                <small class="lead"></small>
                                <br />
                                <label class="texto-login-custom text-primary text-uppercase">Cidade:</label>
                                <small class="lead"></small>
                                <br />
                            </div>
                        </div>
                    </form>
                    <div>
                        <a class="btn btn-light mt-3" asp-controller="Dashboard" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
            <!-- terminando conteudo !-->

        </div>
    </div>
</div>