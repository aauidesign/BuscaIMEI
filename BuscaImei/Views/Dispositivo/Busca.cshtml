@{
    Layout = "_LayoutDashboard";
}

    <!-- Começando conteudo !-->
    <div class="content-wrapper">

        <div class="container-fluid">

            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span>Busca do aparelho</span>
                </li>
            </ol>

            <div class="row ">
                <div class="col-md-12">
                    <h2 class="text-center mt-md-3 mb-md-3">
                        Busca do Aparelho
                    </h2>

                    <form class="container" action="/" method="post">
                        <div class="input-group">
                            <input type="text" name="name" class="form-control" value="" placeholder="Digite seu IMEI" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>

                    <div class="list-group-item mt-3">

                        <div class="table-responsive text-center">
                            <table class="table table-striped table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Status</th>
                                        <th>E-mail</th>
                                        <th>Telefone</th>
                                        <th>IMEI</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <th>Samsung</th>
                                        <td>J5 Metal</td>
                                        <td class="alert alert-danger">Roubado/Furtado</td>
                                        <td>fulano@gmail.com</td>
                                        <td>(99) 9 9999-9999</td>
                                        <td>12345678910</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- terminando conteudo !-->

